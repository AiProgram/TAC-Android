<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <RelativeLayout
        android:id="@+id/login_view"
        android:layout_width="400dp"
        android:layout_height="800dp"
        android:layout_centerInParent="true"
        >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="注册"
            android:id="@+id/btn_register"
            android:onClick="resetpwd"
            android:textColor="#ffffff"
            android:background="@drawable/button_style_register"
            android:textSize="20dp"
            android:layout_below="@+id/btn_login"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="登录"
            android:id="@+id/btn_login"
            android:onClick="finish_login"
            android:background="@drawable/button_style_login"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/et_input_password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="52dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:id="@+id/iv_app_icon"
            android:src="@drawable/logo1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="false" />


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="记住密码"
            android:id="@+id/cb_remember_login"
            android:layout_below="@+id/et_input_password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="忘记密码"
            android:id="@+id/tv_forget_password"
            android:layout_below="@+id/et_input_password"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp" />

        <TextView
            android:text="TAC荣誉出品"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tac_label"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <EditText

            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:id="@+id/et_input_account"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:hint="请输入您的用户名"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/iv_app_icon"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_input_password"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:hint="请输入您的密码"
            android:layout_below="@+id/et_input_account"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>