<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_valid_jobs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_marginTop="14dp">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relativeLayout2"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#aaaaaa"
            android:layout_alignParentStart="true"
            android:id="@+id/view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/tv_username_comment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18250150000"
            android:textColor="#ff0055"
            android:textSize="20sp"
            android:id="@+id/tv_point_comment"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机:"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/user1_score"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/tv_point_comment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未知用户"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:id="@+id/tv_username_comment"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXXXXXXXxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxXXXXXXX"
            android:id="@+id/tv_detail_feedback"
            android:textSize="20sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_below="@+id/view"
            android:layout_alignLeft="@+id/view" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
