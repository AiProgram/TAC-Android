<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_valid_jobs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_marginTop="14dp">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未知用户"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:id="@+id/tv_username_feedback"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXXXXXXXxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxXXXXXXX"
            android:id="@+id/tv_detail_feedback"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/view"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#aaaaaa"
            android:layout_alignParentStart="true"
            android:id="@+id/view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/tv_username_feedback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18250150000"
            android:textColor="#ff0055"
            android:textSize="25sp"
            android:id="@+id/tv_phone_feedback"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话:"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:id="@+id/user1_score"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/tv_phone_feedback" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
