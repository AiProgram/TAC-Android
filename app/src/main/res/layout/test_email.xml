<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:text="设置密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_reset_password"
        android:layout_weight="1" />

    <Button
        android:text="获取验证码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_weight="1"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/bt_reset_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/bt_reset_password"
        android:layout_alignParentStart="true"
        android:id="@+id/et_reset_password"
        android:hint="输入您的密码"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_confirm_reset_password"
        android:layout_below="@+id/et_reset_password"
        android:layout_alignParentStart="true"
        android:hint="再次输入密码"/>

</RelativeLayout>
