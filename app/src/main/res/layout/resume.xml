<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1">

        <TextView
            android:text="简历"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_resume_title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/set_name"
            android:hint="请输入您的真实姓名"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/tv_resume_title"
            android:layout_alignLeft="@+id/set_email"
            android:layout_alignStart="@+id/set_email"
            android:layout_alignRight="@+id/set_email"
            android:layout_alignEnd="@+id/set_email" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:inputType="phone"
            android:ems="11"
            android:id="@+id/set_phone"
            android:hint="请输入您的手机"
            android:layout_below="@+id/set_name"
            android:layout_alignRight="@+id/set_name"
            android:layout_alignEnd="@+id/set_name"
            android:layout_alignLeft="@+id/set_name"
            android:layout_alignStart="@+id/set_name" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:inputType="textEmailAddress"
            android:id="@+id/set_email"
            android:layout_below="@+id/set_phone"
            android:layout_centerHorizontal="true"
            android:hint="请输入您的邮箱" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/resume_btn_cancel"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_style_cancel"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="#ffffff"
            android:id="@+id/resume_btn_sure"
            android:textSize="20dp"
            android:background="@drawable/button_style_sure"
            android:layout_below="@+id/detail_introduce"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:drawableLeft="@drawable/ic_question_answer_black_24dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/sort_introduce"
            android:inputType="text"
            android:hint="您的一句话简介"
            android:layout_below="@+id/set_email"
            android:layout_alignParentStart="true" />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:drawableLeft="@drawable/ic_question_answer_black_24dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:inputType="text"
            android:id="@+id/project"
            android:hint="做过的项目"
            android:layout_below="@+id/sort_introduce"
            android:layout_alignParentStart="true" />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:drawableLeft="@drawable/ic_question_answer_black_24dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/good_at"
            android:inputType="text"
            android:hint="擅长"
            android:layout_below="@+id/project"
            android:layout_alignParentStart="true" />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/project_address"
            android:inputType="text"
            android:hint="项目地址"
            android:layout_below="@+id/good_at"
            android:layout_alignParentStart="true" />

        <EditText

            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:id="@+id/detail_introduce"
            android:inputType="textMultiLine"
            android:minLines="8"
            android:maxLines="30"
            android:scrollbars="vertical"
            android:gravity="top"
            android:background="@android:drawable/edit_text"
            android:hint="您的详细介绍"
            android:layout_below="@+id/project_address" />
    </RelativeLayout>
</ScrollView>
