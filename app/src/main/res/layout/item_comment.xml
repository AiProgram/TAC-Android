<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_valid_jobs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"

    android:layout_marginTop="5dp">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"


    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户1:"
            android:textColor="@color/black"

            android:textSize="18sp"

            android:id="@+id/tv_username_comment"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评分:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/user1_score"
            android:layout_marginEnd="23dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/tv_point_comment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="95"
            android:textColor="#ff0055"
            android:textSize="20sp"
            android:id="@+id/tv_point_comment"
            android:layout_marginEnd="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXXXXXXXxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxXXXXXXX"
            android:id="@+id/tv_content_comment"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/view"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="举报"
            android:textColor="#447eea"
            android:textSize="18sp"
            android:id="@+id/tv_sue_comment"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_content_comment"
            android:layout_marginRight="30dp"
            android:layout_alignEnd="@+id/tv_point_comment" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#aaaaaa"
            android:layout_alignParentStart="true"
            android:id="@+id/view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/tv_username_comment" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
