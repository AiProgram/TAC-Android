<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_valid_jobs"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_alignParentStart="true"
    android:layout_marginTop="14dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选中"
            android:textSize="20sp"
            android:textColor="#009900"
            android:id="@+id/cb_choose"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="95"
            android:textSize="20sp"
            android:textColor="#ff0000"
            android:id="@+id/tv_assess_point"
            android:layout_alignEnd="@+id/tv_applicant_name"
            android:layout_below="@+id/tv_applicant_name"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评分:"
            android:textSize="20sp"
            android:id="@+id/score_tip"
            android:layout_alignStart="@+id/tv_applicant_name"
            android:layout_alignBottom="@+id/tv_assess_point"
            android:layout_below="@+id/tv_applicant_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路人甲"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:id="@+id/tv_applicant_name"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_single_info"
            android:text="精通java，c++，android前端"
            android:textSize="20sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/cb_choose"
            android:layout_marginEnd="12dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

