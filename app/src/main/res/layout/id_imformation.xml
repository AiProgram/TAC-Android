<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <TextView
        android:text="修改个人资料"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_id_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号:"
        android:textSize="25sp"
        android:id="@+id/id_num"
        android:layout_below="@+id/id_image_btn"
        android:layout_marginTop="30dp"
        android:textAllCaps="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号:"
        android:textSize="25sp"
        android:id="@+id/id_phone"
        android:layout_below="@+id/id_email"
        android:layout_marginTop="20dp"
        android:textAllCaps="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱:"
        android:textSize="25sp"
        android:id="@+id/id_email"
        android:layout_below="@+id/id_num"
        android:layout_marginTop="20dp"
        android:textAllCaps="false" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/cardview_dark_background"
        android:id="@+id/id_image"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/tv_id_title"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传"
        android:textSize="20sp"
        android:layout_below="@+id/id_image"
        android:layout_centerHorizontal="true"
        android:id="@+id/id_image_btn" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textSize="20sp"
        android:id="@+id/id_btn_cancel"
        android:layout_alignBaseline="@+id/id_btn_sure"
        android:layout_alignBottom="@+id/id_btn_sure"
        android:layout_alignParentEnd="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="phone"
        android:ems="11"
        android:id="@+id/reset_phone"
        android:hint="请输入您的手机"
        android:text="12345678901"
        android:textSize="25dp"
        android:layout_alignBaseline="@+id/id_phone"
        android:layout_alignBottom="@+id/id_phone"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/tv_id_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456789"
        android:textSize="25dp"
        android:id="@+id/idnum"
        android:layout_alignBaseline="@+id/id_num"
        android:layout_alignBottom="@+id/id_num"
        android:layout_alignStart="@+id/reset_phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="990041251@qq.com"
        android:textSize="25dp"
        android:id="@+id/idemail"
        android:layout_above="@+id/id_phone"
        android:layout_alignStart="@+id/reset_phone" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="确定修改"
        android:textSize="20sp"
        android:id="@+id/id_btn_sure"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码:"
        android:textSize="25sp"
        android:id="@+id/id_pwd"
        android:layout_below="@+id/id_phone"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="********"
        android:textSize="25sp"
        android:id="@+id/idpwd"
        android:textAllCaps="false"
        android:layout_below="@+id/reset_phone"
        android:layout_alignStart="@+id/reset_phone"
        android:layout_alignBottom="@+id/id_pwd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textSize="15dp"
        android:id="@+id/button2"
        android:layout_alignBaseline="@+id/id_pwd"
        android:layout_alignBottom="@+id/id_pwd"
        android:layout_toEndOf="@+id/idnum" />


</RelativeLayout>
