<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回密码"
        android:textSize="50dp"
        android:id="@+id/Title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/findbackpwd_name"
        style="@style/SignUpEditTextStyle"
        android:hint="请输入您的用户名"
        android:layout_below="@+id/Title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:drawableLeft="@drawable/ic_question_answer_black_24dp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:id="@+id/findbackpwd_answer"
        android:hint="请输入您的密保答案"
        style="@style/SignUpEditTextStyle"
        android:layout_below="@+id/findbackpwd_question"
        android:layout_alignRight="@+id/findbackpwd_name"
        android:layout_alignEnd="@+id/findbackpwd_name"
        android:layout_alignLeft="@+id/findbackpwd_name"
        android:layout_alignStart="@+id/findbackpwd_name" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        style="@style/SignUpEditTextStyle"
        android:id="@+id/findbackpwd_new"
        android:layout_below="@+id/findbackpwd_answer"
        android:layout_centerHorizontal="true"
        android:hint="请输入您的新密码"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textColor="#ffffff"
        android:id="@+id/findbackpwd_btn_sure"
        android:textSize="20dp"
        android:onClick="sure_to_reset"
        android:background="#1cf718"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/findbackpwd_check"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        style="@style/SignUpEditTextStyle"
        android:id="@+id/findbackpwd_check"
        android:hint="请确认您的新密码"
        android:layout_below="@+id/findbackpwd_new"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="#ffffff"
        android:id="@+id/findbackpwd_btn_cancel"
        android:textSize="20dp"
        android:background="#f33333"
        android:layout_alignBaseline="@+id/findbackpwd_btn_sure"
        android:layout_alignBottom="@+id/findbackpwd_btn_sure"
        android:layout_alignParentEnd="true" />

    <Spinner

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/findbackpwd_question"
        android:layout_alignTop="@+id/findbackpwd_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

</RelativeLayout>