<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回密码"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:id="@+id/tv_register_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/findbackpwd_account"
        android:hint="请输入您的用户名"
        style="@style/SignUpEditTextStyle"
        android:layout_below="@+id/tv_register_title"
        android:layout_alignParentStart="true" />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        style="@style/SignUpEditTextStyle"
        android:id="@+id/findbackpwd_new"
        android:layout_below="@+id/verification_code"
        android:layout_centerHorizontal="true"
        android:hint="请输入您的新密码"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textColor="#ffffff"
        android:id="@+id/findbackpwd_btn_sure"
        android:textSize="20dp"
        android:onClick="sure_to_reset"
        android:background="@drawable/button_style_sure"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/findbackpwd_check"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        style="@style/SignUpEditTextStyle"
        android:id="@+id/findbackpwd_check"
        android:hint="请确认您的新密码"
        android:layout_below="@+id/findbackpwd_new"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="#ffffff"
        android:id="@+id/findbackpwd_btn_cancel"
        android:textSize="20dp"
        android:background="@drawable/button_style_cancel"
        android:layout_alignBaseline="@+id/findbackpwd_btn_sure"
        android:layout_alignBottom="@+id/findbackpwd_btn_sure"
        android:layout_alignParentEnd="true" />

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verification_code"
        android:gravity="center"
        android:background="@android:drawable/edit_text"
        android:layout_below="@+id/findbackpwd_email"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/tv_register_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入验证码"
        android:textSize="20dp"
        android:id="@+id/verification_code_tip"
        android:layout_alignBaseline="@+id/verification_code"
        android:layout_alignBottom="@+id/verification_code"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送验证码"
        android:textColor="#ffffff"
        android:id="@+id/send_verification_code"
        android:textSize="15dp"
        android:background="#aaaaaa"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/findbackpwd_email"
        android:layout_alignBottom="@+id/findbackpwd_email"
        android:layout_alignParentEnd="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:drawableLeft="@drawable/ic_question_answer_black_24dp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="text"
        android:id="@+id/findbackpwd_email"
        android:hint="请输入您的邮箱"
        style="@style/SignUpEditTextStyle"
        android:layout_below="@+id/findbackpwd_account"
        android:layout_alignParentStart="true" />

</RelativeLayout>