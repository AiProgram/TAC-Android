<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <TextView
        android:text="修改个人资料"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_id_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号:"
        android:textSize="25sp"
        android:id="@+id/tv_accoount_label"
        android:layout_below="@+id/btn_upload_image"
        android:layout_marginTop="30dp"
        android:textAllCaps="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号:"
        android:textSize="25sp"
        android:id="@+id/tv_phone_label"
        android:layout_below="@+id/tv_email_label"
        android:layout_marginTop="20dp"
        android:textAllCaps="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱:"
        android:textSize="25sp"
        android:id="@+id/tv_email_label"
        android:layout_below="@+id/tv_accoount_label"
        android:layout_marginTop="20dp"
        android:textAllCaps="false" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@drawable/button_style_cancel"
        android:id="@+id/btn_cancle_change"
        android:layout_alignBaseline="@+id/btn_confirm_change"
        android:layout_alignBottom="@+id/btn_confirm_change"
        android:layout_alignParentEnd="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="phone"
        android:ems="11"
        android:id="@+id/et_set_phone"
        android:hint="请输入您的手机"
        android:text="12345678901"
        android:textSize="25dp"
        android:layout_alignBaseline="@+id/tv_phone_label"
        android:layout_alignBottom="@+id/tv_phone_label"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btn_confirm_change" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456789"
        android:textSize="25dp"
        android:id="@+id/tv_account"
        android:layout_alignBaseline="@+id/tv_accoount_label"
        android:layout_alignBottom="@+id/tv_accoount_label"
        android:layout_alignStart="@+id/et_set_phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="990041251@qq.com"
        android:textSize="25dp"
        android:id="@+id/tv_email"
        android:layout_above="@+id/tv_phone_label"
        android:layout_alignStart="@+id/et_set_phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码:"
        android:textSize="25sp"
        android:id="@+id/tv_password_label"
        android:textAllCaps="false"
        android:layout_alignBaseline="@+id/btn_change_password"
        android:layout_alignBottom="@+id/btn_change_password"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="确定修改"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/button_style_sure"
        android:id="@+id/btn_confirm_change"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/iv_user_head_image" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传"
        android:textSize="20sp"
        android:background="@drawable/button_style_normal"
        android:id="@+id/btn_upload_image"
        android:layout_below="@+id/iv_user_head_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/cardview_dark_background"
        android:id="@+id/iv_user_head_image"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tv_id_title"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textSize="15dp"
        android:background="@drawable/button_style_choose"
        android:id="@+id/btn_change_password"
        android:layout_below="@+id/et_set_phone"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/et_set_phone"
        android:layout_toStartOf="@+id/btn_cancle_change" />


</RelativeLayout>
