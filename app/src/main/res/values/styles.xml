<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="MyCustomToolbar" >
        <item name="android:textColorPrimary">@color/toolbarTextColor</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/tab_bgcolor</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>
    
    <style name="ContentTitleTextStyle">
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#DE000000</item>
    </style>

    <style name="ContentDisciptionTextStyle">
        <item name="android:textColor">#757575</item>
        <item name="android:paddingLeft">@dimen/content_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/content_padding_vertical</item>
        <item name="android:width">120dp</item>
    </style>

    <style name="ContentTextStyle">
        <item name="android:textColor">#FF000000</item>
    </style>

    <style name="SignUpEditTextStyle">
        <item name="met_baseColor">#0028E5</item>
        <item name="met_floatingLabel">normal</item>
    </style>

    <style name="WarningButton">
        <item name="android:background">@color/warningRed</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AcceptButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/acceptGreen</item>
    </style>

    <style name="JobListTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxWidth">150dp</item>
    </style>

    <style name="JobListWorkInfo">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxWidth">200dp</item>
    </style>

    <style name="JobListDeadline">

    </style>
    <style name="JobListWarningLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/warningRed</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="JobListRemindingLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/acceptGreen</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="mainToolBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/white</item> <!--  敲定颜色-->
        <item name="android:textSize">18sp</item> <!--  搞掂字体大小-->
    </style>

    <style name="mainTabLayoutTheme" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextColor">#BCD6B8</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>
</resources>
